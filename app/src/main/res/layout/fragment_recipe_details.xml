<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RecipeDetailsActivity">

    <TextView
        android:id="@+id/ingredientTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ingredients_margin_bottom"
        android:layout_marginEnd="@dimen/ingredients_margin_end"
        android:layout_marginStart="@dimen/ingredients_margin_start"
        android:layout_marginTop="@dimen/ingredients_margin_top"
        android:text="@string/Ingredients_list"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ingredientRV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredientRV"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ingredients_list_margin_top"
        app:layout_constraintTop_toBottomOf="@+id/ingredientTv"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>